<?xml version="1.0" encoding="utf-8"?>
<!-- Default unselected floor background: white with green border -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- White background for unselected floors -->
    <solid android:color="@android:color/white" />

    <!-- Green border -->
    <stroke
        android:width="2dp"
        android:color="@color/becomap_primary" />

    <!-- Ensure perfect circle -->
    <size
        android:width="40dp"
        android:height="40dp" />

</shape>
